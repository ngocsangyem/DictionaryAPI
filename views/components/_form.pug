form.lookup-form(action="/")
	.search-input.search-input--icon-right
		input#search-input.search-input__input.form-control(type='search' name='word' placeholder='Search...' aria-label='Search' required)
		button.search-input__btn(type="submit")
			svg.icon(viewBox='0 0 24 24')
				title Submit
				g(stroke-linecap='square' stroke-linejoin='miter' stroke-width='2' stroke='currentColor' fill='none' stroke-miterlimit='10')
					line(x1='22' y1='22' x2='15.656' y2='15.656')
					circle(cx='10' cy='10' r='8')
	.custom-select
		label.form-label.margin-bottom-xxxs(for='selectLang') Translate:
		.select.inline-block.js-select(data-trigger-class='btn btn--subtle')
			select#selectLang(name="lang" required)
				option(value='english' selected='') Select option
				option(value='english') English
				option(value='vi') Vietnamese
				option(value='zh-CN') Chinese (Simplified)
				option(value='zh-TW') Chinese (Traditional)
				option(value='ja') Japan
				option(value='de') German
				option(value='id') Indonesian
				option(value='hi') Hindi
				option(value='ko') Korean
				option(value='ar') Arabic
			svg.icon.icon--xs(aria-hidden='true' viewBox='0 0 16 16')
				polygon(points='3,5 8,11 13,5 ')


